<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ListActivity">

    <Spinner
        android:id="@+id/typeSearch"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:entries="@array/arrayTypeSearch"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/cowListView"
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:layout_margin="6dp"
        android:layout_marginBottom="3dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Total :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalMilkView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text=" 100L"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Avarege :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/avarageMilkView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text=" 100L"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="Back"
                android:textColor="@color/fontColor"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconPadding="5dp"
                app:iconTint="#FF0000" />

            <Button
                android:id="@+id/addCowBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="Add new Cow"
                android:textColor="@color/fontColor"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_menu_add"
                app:iconPadding="5dp"
                app:iconTint="#FF4500" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>